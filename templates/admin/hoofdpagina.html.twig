    </div>
    {% block nav %}
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item {{ app.request.get('_route') == 'app_admin_main' ? 'active' }}">
                        <a class="nav-link" href="{{ path("app_admin_main") }}">Home <span
                                    class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item {{ app.request.get('_route') == 'app_admin_instructeur' ? 'active' }}">
                        <a class="nav-link" href="{{ path('app_admin_instructeur') }}">Instructeurs</a>
                    </li>
                    <li class="nav-item {{ app.request.get('_route') == 'app_admin_leden' ? 'active' }}">
                        <a class="nav-link" href="{{ path('app_admin_leden') }}">Leden</a>
                    </li>
                    <li class="nav-item {{ app.request.get('_route') == 'app_admin_training' ? 'active' }}">
                        <a class="nav-link" href="{{ path('app_admin_training') }}">Trainingen</a>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    {% if is_granted("IS_AUTHENTICATED_FULLY") %}
                        <li class="nav-item">
                            <a class="nav-link" href="#">Ingelogd als: {{ app.user.fullname }}</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Rol: {{ app.user.roles[0] }}</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path("app_logout") }}">Uitloggen</a>
                        </li>

                    {% else %}
                        <li class="nav-item {{ app.request.get('_route') == 'app_login' ? 'active' }}">
                            <a class="nav-link" href="{{ path("app_login") }}">Inloggen</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </nav>
    {% endblock %}

</head>
<body>
<div class="container-fluid" style="border: 1px solid black;">
    <div class="row">
        <img src="{{ asset("p1.jpg") }}" class="col-4 d-none d-xs-none d-sm-none d-md-none d-lg-block" alt="">
        <img src="{{ asset("p2.jpg") }}" class="col-4 d-none d-xs-none d-sm-none d-md-none d-lg-block" alt="">
        <img src="{{ asset("p3.png") }}" class="col-4 d-none d-xs-none d-sm-none d-md-none d-lg-block" alt="">
    </div>
    <br>
    {% block body %}
